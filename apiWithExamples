  <script>
    function showAPIDemo() {
      const demoElement = document.getElementById('api-demo');
      const progressBar = document.getElementById('api-progress');
      const resultElement = document.getElementById('api-result');
      demoElement.classList.remove('hidden');
      let width = 0;
      const interval = setInterval(() => {
        width += 5;
        progressBar.style.width = width + '%';
        if (width >= 100) {
          clearInterval(interval);
          resultElement.classList.remove('hidden');
        }
      }, 100);
      demoElement.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
  </script>
